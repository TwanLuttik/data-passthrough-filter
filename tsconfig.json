{
  "compilerOptions": {
    "sourceMap": true,
    "target": "ES2019",
    "module": "CommonJS",
    "declaration": true,
    "strictFunctionTypes": false,
    "esModuleInterop": true,
    "strict": false,
    "moduleResolution": "node",
    "baseUrl": "./src",
    "outDir": "./build"
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "./dist/**/*",
    "node_modules"
  ]
}